---
import { getSessionFromCookies } from '../lib/admin-auth';
import Sidebar from '../components/admin/Sidebar.svelte';
import '../styles/global.css';
import '../styles/admin.css';

interface Props {
  title: string;
  activeTab?: string;
  showHeader?: boolean;
}

const { title, activeTab = 'dashboard', showHeader = true } = Astro.props;

// Auth check - redirect to login if no valid session
const session = getSessionFromCookies(Astro.request.headers.get('cookie'));
const isAuthenticated = !!session;
---

<!DOCTYPE html>
<html lang="en" class="dark">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="robots" content="noindex, nofollow">
  <title>{title} | TrendiMovies Admin</title>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
      font-family: 'Inter', sans-serif;
      background-color: #0a0a0a;
      color: #ffffff;
      min-height: 100vh;
    }
    /* Sidebar is fixed at 256px (w-64) */
    .admin-main {
      margin-left: 256px;
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    /* Header with proper spacing */
    .admin-header {
      position: sticky;
      top: 0;
      z-index: 40;
      background: rgba(10, 10, 10, 0.8);
      backdrop-filter: blur(12px);
      border-bottom: 1px solid #2a2a2a;
      padding: 1.25rem 1.5rem;
    }
    .admin-header h1 {
      font-size: 1.5rem;
      font-weight: 700;
    }
    /* Content area */
    .admin-content {
      flex: 1;
      padding: 1.5rem;
    }
  </style>
</head>
<body class="admin-scrollbar">
  {isAuthenticated ? (
    <>
      <Sidebar client:load activeTab={activeTab} />

      <main class="admin-main">
        {showHeader && (
          <header class="admin-header">
            <h1>{title}</h1>
          </header>
        )}

        <div class="admin-content">
          <slot />
        </div>
      </main>
    </>
  ) : (
    <script is:inline>
      window.location.href = '/admin/login';
    </script>
    <div style="display:flex;align-items:center;justify-content:center;height:100vh;color:#666;">
      Redirecting to login...
    </div>
  )}
</body>
</html>
