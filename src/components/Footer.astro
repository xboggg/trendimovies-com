<style>
  .footer-container {
    background: linear-gradient(180deg, #0a0a0a 0%, #111111 50%, #0d0d0d 100%);
    border-top: 1px solid rgba(251, 191, 36, 0.1);
  }

  /* Animated shimmer effect for top border */
  @keyframes shimmer {
    0% { background-position: -200% center; }
    100% { background-position: 200% center; }
  }

  .animate-shimmer {
    background: linear-gradient(90deg, transparent 0%, transparent 40%, #fbbf24 50%, transparent 60%, transparent 100%);
    background-size: 200% 100%;
    animation: shimmer 3s ease-in-out infinite;
  }

  /* Logo with glow effect */
  .logo-container {
    position: relative;
    display: inline-block;
  }

  .logo-glow {
    position: absolute;
    inset: -30px;
    background: radial-gradient(circle, rgba(251, 191, 36, 0.2) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.5s ease;
    pointer-events: none;
  }

  .logo-container:hover .logo-glow {
    opacity: 1;
  }

  /* Footer headings */
  .footer-heading {
    font-size: 1rem;
    font-weight: 700;
    color: #fbbf24;
    margin-bottom: 1.25rem;
    position: relative;
    display: inline-block;
  }

  .footer-heading::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 30px;
    height: 2px;
    background: linear-gradient(90deg, #fbbf24, transparent);
  }

  /* Footer links with animated underline */
  .footer-link {
    color: #9ca3af;
    position: relative;
    display: inline-block;
    transition: color 0.3s ease;
  }

  .footer-link::after {
    content: '';
    position: absolute;
    bottom: -2px;
    left: 0;
    width: 0;
    height: 1px;
    background: linear-gradient(90deg, #fbbf24, #dc2626);
    transition: width 0.3s ease;
  }

  .footer-link:hover {
    color: #fbbf24;
  }

  .footer-link:hover::after {
    width: 100%;
  }

  /* Glossy Social Icons */
  .social-icon-glossy {
    position: relative;
    width: 52px;
    height: 52px;
    border-radius: 16px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .icon-inner {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(145deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 50%, rgba(0,0,0,0.1) 100%);
    border: 1px solid rgba(255,255,255,0.15);
    border-radius: 16px;
    color: #9ca3af;
    transition: all 0.4s ease;
  }

  .icon-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.3) 50%, transparent 100%);
    transition: left 0.6s ease;
  }

  .social-icon-glossy:hover {
    transform: translateY(-6px) scale(1.05);
  }

  .social-icon-glossy:hover .icon-shine {
    left: 100%;
  }

  /* Telegram */
  .social-icon-glossy.telegram:hover .icon-inner {
    background: linear-gradient(145deg, #0088cc 0%, #0077b5 50%, #006699 100%);
    border-color: #00aaff;
    color: white;
    box-shadow: 0 10px 30px rgba(0, 136, 204, 0.5), inset 0 1px 0 rgba(255,255,255,0.2);
  }

  /* TikTok */
  .social-icon-glossy.tiktok:hover .icon-inner {
    background: linear-gradient(145deg, #000000 0%, #25f4ee 50%, #fe2c55 100%);
    border-color: #fe2c55;
    color: white;
    box-shadow: 0 10px 30px rgba(254, 44, 85, 0.5), inset 0 1px 0 rgba(255,255,255,0.2);
  }

  /* Facebook */
  .social-icon-glossy.facebook:hover .icon-inner {
    background: linear-gradient(145deg, #1877f2 0%, #0d65d9 50%, #0a52b3 100%);
    border-color: #4293ff;
    color: white;
    box-shadow: 0 10px 30px rgba(24, 119, 242, 0.5), inset 0 1px 0 rgba(255,255,255,0.2);
  }

  /* Instagram */
  .social-icon-glossy.instagram:hover .icon-inner {
    background: linear-gradient(145deg, #f09433 0%, #e6683c 25%, #dc2743 50%, #cc2366 75%, #bc1888 100%);
    border-color: #ff6b6b;
    color: white;
    box-shadow: 0 10px 30px rgba(220, 39, 67, 0.5), inset 0 1px 0 rgba(255,255,255,0.2);
  }

  /* Twitter/X */
  .social-icon-glossy.twitter:hover .icon-inner {
    background: linear-gradient(145deg, #1a1a1a 0%, #000000 50%, #0a0a0a 100%);
    border-color: #ffffff;
    color: white;
    box-shadow: 0 10px 30px rgba(255, 255, 255, 0.2), inset 0 1px 0 rgba(255,255,255,0.3);
  }

  /* Continuous subtle animation for icons */
  @keyframes pulse-glow {
    0%, 100% { box-shadow: 0 0 5px rgba(251, 191, 36, 0.1); }
    50% { box-shadow: 0 0 15px rgba(251, 191, 36, 0.2); }
  }

  .social-icon-glossy .icon-inner {
    animation: pulse-glow 3s ease-in-out infinite;
  }

  .social-icon-glossy:nth-child(2) .icon-inner { animation-delay: 0.2s; }
  .social-icon-glossy:nth-child(3) .icon-inner { animation-delay: 0.4s; }
  .social-icon-glossy:nth-child(4) .icon-inner { animation-delay: 0.6s; }
  .social-icon-glossy:nth-child(5) .icon-inner { animation-delay: 0.8s; }

  /* Divider line */
  .divider-line {
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, rgba(251, 191, 36, 0.3) 50%, transparent 100%);
  }
</style>
